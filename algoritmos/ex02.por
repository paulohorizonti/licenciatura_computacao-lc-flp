programa
{
	
	funcao inicio()
	{
		inteiro base
		inteiro area
		inteiro altura

		escreva("Digite a base: ")
		leia(base)
		escreva("Digite a altura : ")
		leia(altura)

		area = (base*altura)/2

		escreva("A área do triangulo, com dados propostos é : ",area,"\n")
			escreva("=============================================== \n")
	
	}
}
